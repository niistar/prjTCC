    <div class="container">
        <div class="row" style="margin-top: 10px"></div>
        <form>
            <div class="row">
                <h5 style="text-align: left; font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">Selecione as máquinas desejadas</h4>
                    <div class="col s12">
                        <!-- <select multiple>
