<div class="container">
    <section>
    <h1 class="header teal-text">Quartos disponíveis</h1>
    <br><br><form name='formReserva'>
  <div class='input-field col s6'>
    <br>
  <input type='date' name='data_ent' ng-model='data_inicio' required/><br><br>
  <label for="data_ent">Data de entrada*</label>
  </div>
  <div class='input-field col s6'><br>
  <input type='date' name='data_sai' ng-model='data_fim' required /><br><br>
  <label for="data_sai">Data de saída*</label>
  </div>
  <span style="font-size: 10px; font-style:italic">*Campos Obrigatórios</span>
  
    <table class="highlight">
  <tr>
    <th>Título</th>
    <th>Rua</th>
    <th>Número</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th>Descrição</th>
    <th>Preço</th>
  </tr>
  <tr ng-repeat="quarto in quartos">
    <td>{{quarto._id}}</td>
    <td>{{quarto.titulo}}</td>
    <td>{{quarto.rua}}</td>
    <td>{{quarto.numero}}</td>
    <td>{{quarto.cidade}}</td>
    <td>{{quarto.estado}}</td>
    <td>{{quarto.desc}}</td>
    <td>{{quarto.preco | currency : "R$ "}}</td>
    <td><a class="waves-effect waves-light btn" value='salvar' type='submit' ng-click="formReserva.$valid && reservar(quarto)"><i class="material-icons right">send</i>Reservar</a></td>
  </tr>
</table></form>
    </section>
    <button id='botao' ng-click="alert()">aaa</button>
</div>



