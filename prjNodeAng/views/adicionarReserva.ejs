  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script type="text/javascript" src="../javascripts/lib/materialize.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js"></script>
  <script src="../node_modules/sweetalert/lib/sweet-alert.js"></script>
  <script src="../node_modules/angular-sweetalert/SweetAlert.js"></script>
  <script src="../bower_components/ngSweetalert/SweetAlert.min.js"></script>

  <script>
  var app = angular.module('myApp', ['ngRoute', 'ngResource', 'oitozero.ngSweetAlert']);
  
  app.controller('reservaController', ['$scope', '$http', 'SweetAlert', function ($scope, $http) {
          $scope.quartos = [];

          $scope.func  = function(){
          $http.get('/users/adicionarReserva').then(function(response)
            {
              $scope.quartos = response.data;
            });   
          }
          $scope.reservar = function(quarto){
            swal({
            title: "Reservar o quarto?",
            text: "O valor da reserva será debitado do seu saldo!",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Confirmar",
            closeOnConfirm: false}, 
          function(){ 
            var data = ({
                _id: quarto._id,
                titulo: $scope.titulo,
                rua: $scope.rua,
                numero: $scope.numero,
                cidade: $scope.cidade,
                estado: $scope.estado,
                preco: quarto.preco,
                data_inicio: $scope.data_inicio,
                data_fim: $scope.data_fim
            });
            console.log(data);

            $http.post('/users/adicionarReserva/', data).then(function (response) {
          }, function (response) {
          console.log("erro");
          });
          swal("Parabéns! Você reservou o quarto! ");
          $scope.func();
          $scope.data_inicio = null;
          $scope.data_fim = null;
          }
            )};
        $scope.func();

  }])
  
  
  </script>

</body>






</html>
