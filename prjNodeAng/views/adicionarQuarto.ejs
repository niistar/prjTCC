<div class="container">
  <form>
    <div class='input-field col s6'>
    <section>
      <div>
      <input type='text' ng-model='titulo' id='titulo' /><br><br>
      <label for="titulo">Título do anúncio</label>
      </div>
      <div class='input-field col s6'>
      <input type='text' ng-model='rua' id='rua'/><br><br>
      <label for="rua">Rua</label>
      </div>
      <div class='input-field col s6'>
      <input type='number' ng-model='numero' id='numero'/><br><br>
      <label for="numero">Número</label>
      </div>
      <div class='input-field col s6'>
      <input type='text' ng-model='cidade' id='cidade'/><br><br>
      <label for="cidade">Cidade</label>
      </div>
      <div class='input-field col s6'>
      <input type='text' ng-model='estado' id='estado'/><br><br>
      <label for="estado">Estado</label>
      </div>
      <div class='input-field col s6'>
      <input type='text' ng-model='desc' id='desc'/><br><br>
      <label for="desc">Descrição do quarto</label>
      </div>R$
      <div class='input-field col s6'>
      <input type='number' step='0.01' ng-model='preco' id='preco' /><br><br>
      <label for="preco">Preço do quarto</label>
      </div>
      
      <!--<input type='submit' value='salvar' ng-click="adicionarQuarto()"/>-->
      <a class="btn-floating btn-large waves-effect waves-light teal darken-3" value='salvar' type='submit' ng-click="adicionarQuarto()"><i class="material-icons">add</i></a>
      </form>
     
<br><br><br>
<h1 class="header teal-text">Meus Quartos</h1>
<br><br>
    <table class="highlight">
  <tr>
    <th>Título</th>
    <th>Rua</th>
    <th>Número</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th>Descrição</th>
    <th>Preço</th>
  </tr>
  <tr ng-repeat="quarto in quartos">
    <td>{{quarto._id}}</td>
    <td>{{quarto.titulo}}</td>
    <td>{{quarto.rua}}</td>
    <td>{{quarto.numero}}</td>
    <td>{{quarto.cidade}}</td>
    <td>{{quarto.estado}}</td>
    <td>{{quarto.desc}}</td>
    <td>{{quarto.preco | currency : "R$ "}}</td>
  </tr>
</table>
    </section>
</div>
</div>



