  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js"></script>
  <script src="../node_modules/sweetalert/lib/sweet-alert.js"></script>
  <script src="../node_modules/angular-sweetalert/SweetAlert.js"></script>
  <script src="../bower_components/ngSweetalert/SweetAlert.min.js"></script>

  <script>
  var app = angular.module('myApp', ['ngRoute', 'ngResource', 'oitozero.ngSweetAlert']);
  
  app.controller('quartoController', ['$scope', '$http', function ($scope, $http) {
          $scope.adicionarQuarto = function () {
          swal({
            title: "Cadastrar o quarto?",
            text: "Cheque se está tudo certo!",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Confirmar",
            closeOnConfirm: false}, 
            function(){ 
          $scope.quartos = [];

            var data = ({
                titulo: $scope.titulo,
                rua: $scope.rua,
                numero: $scope.numero,
                cidade: $scope.cidade,
                estado: $scope.estado,
                desc: $scope.desc,
                preco: $scope.preco
            });
            console.log(data);
            
          $http.get('/users/adicionarQuarto').then(function(response)
            {
              $scope.quartos = response.data;
            });   

          $http.post('users/adicionarQuarto', data).then(function (response) {
          }, function (response) {
          console.log("erro");
        });
        swal("Seu quarto foi adicionado com sucesso!");
        $scope.func();
        $scope.titulo = null,
        $scope.rua = null,
        $scope.numero = null,
        $scope.cidade = null,
        $scope.estado = null,
        $scope.desc = null,
        $scope.preco = null
        $scope.func();
            }
            );

        };
          $scope.func  = function(){
            $http.get('/users/adicionarQuarto').then(function(response)
            {
              $scope.quartos = response.data;
            });   
          }
        
        $scope.func();
  }])
  
  
  </script>

